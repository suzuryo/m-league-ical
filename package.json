{
  "name": "m-league-ical",
  "version": "1.0.0",
  "description": "Mリーグのスケジュールを取得してiCal形式で出力してGithub Pagesにデプロイする",
  "main": "dist/fetcher.js",
  "type": "module",
  "scripts": {
    "build": "esbuild src/fetcher.ts --bundle --platform=node --format=esm --outfile=dist/fetcher.js --external:node:*",
    "typecheck": "tsc --noEmit",
    "fetch": "tsx src/fetcher.ts",
    "start": "npm run build && node dist/fetcher.js",
    "dev": "tsx src/fetcher.ts",
    "lint": "eslint .",
    "test": "vitest --run",
    "test:coverage": "vitest --run --coverage"
  },
  "keywords": [
    "m-league",
    "fetcher",
    "schedule"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "9.36.0",
    "@types/node": "24.5.2",
    "@vitest/coverage-v8": "3.2.4",
    "esbuild": "0.25.10",
    "eslint": "9.36.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "prettier": "3.6.2",
    "tsx": "4.20.6",
    "typescript": "5.9.2",
    "typescript-eslint": "8.44.1",
    "vitest": "3.2.4"
  }
}
