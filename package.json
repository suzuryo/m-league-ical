{
  "name": "m-league-ical",
  "version": "1.0.0",
  "description": "Mリーグのスケジュールを取得してiCal形式で出力してGithub Pagesにデプロイする",
  "main": "dist/fetcher.js",
  "type": "module",
  "scripts": {
    "build": "esbuild src/fetcher.ts --bundle --platform=node --format=esm --outfile=dist/fetcher.js --external:node:*",
    "typecheck": "tsc --noEmit",
    "fetch": "tsx src/fetcher.ts",
    "start": "pnpm run build && node dist/fetcher.js",
    "dev": "tsx src/fetcher.ts",
    "lint": "eslint .",
    "test": "vitest --run",
    "test:coverage": "vitest --run --coverage"
  },
  "keywords": [
    "m-league",
    "fetcher",
    "schedule"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@types/node": "25.0.2",
    "@vitest/coverage-v8": "4.0.15",
    "esbuild": "0.27.1",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "prettier": "3.7.4",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.49.0",
    "vitest": "4.0.15"
  }
}
